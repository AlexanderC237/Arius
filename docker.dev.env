# arius environment variables for a development setup
# These variables will be used by the docker-compose.yml file

# Set DEBUG to True for a development setup
ARIUS_DEBUG=True
ARIUS_LOG_LEVEL=INFO

# Database configuration options
# Note: The example setup is for a PostgreSQL database (change as required)
ARIUS_DB_ENGINE=postgresql
ARIUS_DB_NAME=arius
ARIUS_DB_HOST=arius-dev-db
ARIUS_DB_PORT=5432
ARIUS_DB_USER=pguser
ARIUS_DB_PASSWORD=pgpassword

# Enable custom plugins?
ARIUS_PLUGINS_ENABLED=True
